

<div class="w-75 mx-auto mt-5">
    <br />

    <div class="row">
        <div class="col-6">
            <h2>Employee Review System</h2>
        </div>
    </div>
   
    <% if(performaces.length > 0) {%>
    <div class="mt-3 mb-3">
       
        <table class="table table-bordered table-striped" id="employeeTable">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Employee ID</th>
                    <th scope="col">Employee Name</th>
                    <th  colspan="5" title="center"> Perfomance Review </th>
                    <th scope="col">Reviewer</th>
                    <th scope="col">FeedBack</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
                <tr>
                    <th></th>
                    <th></th>
                    <th scope="col">Job Knowledge</th>
                    <th scope="col">Quality of  Work</th>
                    <th scope="col">Productivity</th>
                    <th scope="col">Communication</th>
                    <th scope="col">Problem Solving</th>
                    <th></th>
                    <th></th>
                    <th>Add FeedBack</th>
                </tr>
            </thead>
            <% for(let perfomance of performaces) {%>

                <% if (JSON.stringify(locals.user._id) === JSON.stringify(perfomance.reviewer._id)) { %>
                <form action="/employee/addFeedback/<%=perfomance._id%>" method="POST">
            <tbody id="myTable" style="color: white;">
                
                <tr>
                    <td><%= perfomance.employee.employeeID%></td>
                    <td><%= perfomance.employee.name%></td>
                    <td ><%=perfomance.jobKnowledge%></td>
                    <td ><%=perfomance.qualityOfWork%></td>
                    <td ><%=perfomance.productivity%></td>
                    <td ><%=perfomance.communication%></td>
                    <td ><%=perfomance.problemSolving%></td>
                    <td><%= perfomance.reviewer.name%></td>  
                    <td><%= perfomance.feedback%></td>             
                    <td style="display: flex; justify-content: space-around; align-items: center">
                        <textarea name="feedback" id="feedback-textarea" rows="2" cols="20" class="mr-2" ></textarea>
                        <input type="submit" class="btn btn-success btn-small" value="Update"/>
                    </td>
                    </td>
                </tr>
           
            </tbody>
        </form>
            <%}%>
            <%}%>
        </table>
        
  
    </div>
    <%}else{%>
    <div class="w-75 mx-auto mt-5">
        <h2>No Records Found</h2>
    </div>
    <%}%>
</div>


